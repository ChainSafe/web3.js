{
    "root": true,
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "no-bitwise": 2,
        "camelcase": 2,
        "eqeqeq": 2,
        "no-extend-native": 2,
        "block-scoped-var": 0,
        "complexity": [
            2,
            10
        ],
        "max-depth": [
            2,
            4
        ],
        "no-new": 0,
        "no-unused-vars": 0,
        "no-undef": 0
    }
}
