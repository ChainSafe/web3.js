{
  "compilerOptions": {
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": ["es6"],
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": false,
    "types" : ["node","jest"],
    "rootDirs": ["./src", "./test"]
  }
}